<form action="/product/edit/{{product._id}}?_method=PUT" class="form_loginsignup" method="POST">
    <div class="form-group">
        <label for="name">Name:</label>
        <input type="text" class="form-control" value="{{product.name}}" id="name" name="name">
    </div>
    <div class="form-group">
        <label for="image">Link image:</label>
        <input type="text" class="form-control" value="{{product.image}}" id="image" name="image">
    </div>
    <div class="form-group">
        <label for="price">Email:</label>
        <input type="number" class="form-control"  value="{{product.price}}" id="price" name="price">
    </div>

    <button type="submit" class="btn btn-primary">Sửa sản phẩm</button>
</form>